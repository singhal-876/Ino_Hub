                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/I6_N"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Raamdeo_Agrawal_N"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_below="@id/I6"/>

                <TextView
                    android:id="@+id/I6_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Raamdeo_Agrawal_C"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@id/I6_N"/>

                <TextView
                    android:id="@+id/I6_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Raamdeo_Agrawal_B"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/I6_C"
                    tools:ignore="VisualLintLongText" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>