                    android:layout_below="@id/I4_N"/>

                <TextView
                    android:id="@+id/I4_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ramesh_Damani_B"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/I4_C"
                    tools:ignore="VisualLintLongText" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/I5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pv"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/I5_N"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Porinju_Veliyath_N"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_below="@id/I5"/>

                <TextView
                    android:id="@+id/I5_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Porinju_Veliyath_C"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@id/I5_N"/>

                <TextView
                    android:id="@+id/I5_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Porinju_Veliyath_B"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/I5_C"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/I6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
